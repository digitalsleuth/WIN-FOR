<Window x:Class="WinFORCustomizer.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Loading..."
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Border Background="#CCFFFFFF" BorderBrush="Gray" BorderThickness="1" Padding="4">
        <StackPanel>
            <TextBlock Text="Loading, please wait..."
                   FontSize="14"
                   Margin="4"
                   HorizontalAlignment="Center"
                   TextAlignment="Center" />
            <ProgressBar Width="150" Height="10" IsIndeterminate="True" Margin="5"/>
        </StackPanel>
    </Border>
</Window>